<html lang="en">
    <%- include('./partials/header.ejs') %>
    <style>
         @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Anton&family=Poppins&family=Roboto&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&family=Russo+One&display=swap");

    :root {
      --shadow: 0 1px 7px rgba(105, 105, 105, 0.8);
    }

    * {
      margin: 0;
      padding: 0;
    }

    html {
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
      color: black;
    }

    body {
      background-image: linear-gradient(to right, #e2dfdf, #647e74);
      line-height: 1.5rem;
    }


    .wrapper {
      display: grid;
      gap: 20px;
    }

    /* Banner */

    .title {
      font-size: 3rem;
      color: white;
    }

    .banner {
      background-image: linear-gradient(to right, #4b9e85, #190a05);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 30px 50px;
      font-family: "Russo One", sans-serif;
    }

    .main-nav ul {
      display: grid;

      gap: 30px;

      grid-template-columns: repeat(5, 1fr);
      list-style-type: none;
      padding: 0;
    }

    .main-nav a {
      display: block;
      text-decoration: none;
      text-align: center;
      background-color: #598173;
      color: white;
      font-size: 1.2rem;
      padding: 0.5rem;
      box-shadow: var(--shadow);
      text-transform: uppercase;
    }

    .main-nav a:hover {
      background-color: white;
      color: black;
    }

    .delete-container {
        margin-top: 2rem;
        margin-left: auto;
        margin-right: auto;
        padding: 1rem;
        text-align: center;
        max-width: 1060px;
    }

    .form-container {
        text-align-last: center;
        display: grid;
        max-width: 1060px;
        margin-left: auto;
        margin-right: auto;
        padding-bottom: 1rem;
        align-content: center;
    }

    button {
      width: 100px;
      margin-left: auto;
      margin-right: auto;
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
      background-color: #598173;
      color: white;
    }

    button:hover {
      background-color: rgb(255, 255, 255);
      color: #190a05;
    }

    .submit{
        width: 100px;
        margin-left: auto;
        margin-right: auto;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        margin-top: 2rem;
    }

    .form-container-title{
        margin-bottom: 2rem;
    }

    footer {
      text-align: center;
      margin-top: 5rem;
    }

    @media (max-width: 970px) {
      .banner {
        display: grid;
        text-align: center;
        grid-template-columns: repeat(1, 1fr);
        gap: 20px;
        padding: 30px 30px;
      }
      .main-nav ul {
        display: grid;
        gap: 10px;
        grid-template-columns: repeat(3, 1fr);
        list-style-type: none;
        padding: 0;
      }
  }

    </style>

    <body>
        <%- include('./partials/banner.ejs') %>
        <div class="delete-container">
            <div class="form-container">
                <form action="/books/<%= locals.theId %>?_method_override=DELETE" method="POST">
                    <h1 class="form-container-title">Are you sure you want to delete this Book?</h1>
                    <label></br>
                        <input type="text" id="<%= locals.theId %>" name="book" value="<%= locals.title %>" readonly>
                    </label><br>
                    <button class="submit">DELETE</button>
                </form>
            </div>
        </div>
    </body>
    <%- include('./partials/footer.ejs') %>
</html>
