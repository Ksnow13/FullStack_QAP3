<html lang="en">
    <%- include('./partials/header.ejs') %>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Anton&family=Poppins&family=Roboto&display=swap");
        @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&family=Russo+One&display=swap");
    
        :root {
          --shadow: 0 1px 7px rgba(105, 105, 105, 0.8);
        }
    
        * {
          margin: 0;
          padding: 0;
        }
    
        html {
          box-sizing: border-box;
          font-family: "Poppins", sans-serif;
          color: black;
        }
    
        body {
          background-color: rgb(255, 255, 255);
          line-height: 1.5rem;
        }
    
        .wrapper {
          display: grid;
          gap: 20px;
        }
    
        /* Banner */
    
        .title {
          font-size: 3rem;
          color: white;
        }
    
        .banner {
          background-image: linear-gradient(to right, #870000, #190a05);
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 30px 50px;
          font-family: "Russo One", sans-serif;
        }
    
        .main-nav ul {
          display: grid;
    
          gap: 30px;
    
          grid-template-columns: repeat(5, 1fr);
          list-style-type: none;
          padding: 0;
        }
    
        .main-nav a {
          display: block;
          text-decoration: none;
          text-align: center;
          background-color: black;
          color: white;
          font-size: 1.2rem;
          padding: 0.5rem;
          box-shadow: var(--shadow);
          text-transform: uppercase;
        }
    
        .main-nav a:hover {
          background-color: white;
          color: black;
        }
    
        .edit-container {
            margin-top: 2rem;
            margin-left: auto;
            margin-right: auto;
            padding: 1rem;
            text-align: center;
            max-width: 1060px;
        }
    
        .form-container {
           
            text-align-last: center;
            display: grid;
            max-width: 1060px;
            margin-left: auto;
            margin-right: auto;
            padding-bottom: 1rem;
            align-content: center;
        }
    
        .form-container-title{ 
             padding-bottom: 2rem;
        }
    
        .theinput {
            padding: 0.5rem;
        }
    
        .input-title{
            margin-top: 1rem;
        }
    
        .submit{
            width: 100px;
            margin-left: auto;
            margin-right: auto;
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        footer {
        text-align: center;
        margin-top: 5rem;
      }

      @media (max-width: 970px) {
        .banner {
          display: grid;
          text-align: center;
          grid-template-columns: repeat(1, 1fr);
          gap: 20px;
          padding: 30px 30px;
        }
        .main-nav ul {
          display: grid;
          gap: 10px;
          grid-template-columns: repeat(3, 1fr);
          list-style-type: none;
          padding: 0;
        }
    }

    </style>
    <body>
        <%- include('./partials/banner.ejs') %>
        <div class="edit-container">
            <div class="form-container">
                <form action="/patrons/<%= locals.theId %>?_method_override=PUT" method="POST">
                    <h1 class="form-container-title">Replace Patron Info</h1>
                    <h3 class="input-title">First Name</h3>
                    <input class="theinput" type="text" id="first_name" name="first_name" value="<%= locals.first_name %>" required><br>
                    <h3 class="input-title">Last Name</h3>
                    <input class="theinput" type="text" id="last_name" name="last_name" value="<%= locals.last_name %>" required><br>
                    <h3 class="input-title">Phone</h3>
                    <input class="theinput" type="text" id="phone" name="phone" value="<%= locals.phone %>" required><br>
                    <h3 class="input-title">Email</h3>
                    <input class="theinput" type="text" id="email" name="email" value="<%= locals.email %>" required><br>
                    <h3 class="input-title">Province ID</h3>
                    <input class="theinput" type="text" id="province_id" name="province_id" value="<%= locals.province_id %>" required><br>
                    <h3 class="input-title">Area Code ID</h3>
                    <input class="theinput" type="text" id="areacode_id" name="areacode_id" value="<%= locals.areacode_id %>" required><br>
                    </br> <br>
                    <button class="submit">PUT</button>
                </form>
            </div>
        </div>
    </body>
    <%- include('./partials/footer.ejs') %>
</html>