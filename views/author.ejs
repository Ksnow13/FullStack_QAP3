<html lang="en">
  <%- include('./partials/header.ejs') %>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Anton&family=Poppins&family=Roboto&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&family=Russo+One&display=swap");

    :root {
      --primary: #1494aa;
      --dark: #0a3b85;
      --light: #d2dddd;
      --shadow: 0 1px 7px rgba(105, 105, 105, 0.8);
    }

    * {
      margin: 0;
      padding: 0;
    }

    html {
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
      color: black;
    }

    body {
      background-color: rgb(255, 255, 255);
      line-height: 1.5rem;
    }

    .wrapper {
      display: grid;
      gap: 20px;
    }

    /* ---------------------------------------------------------------------------------------------------------------*/

    /* Banner */

    .title {
      font-size: 3rem;
      color: white;
    }

    .banner {
      background-image: linear-gradient(to right, #870000, #190a05);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 30px 50px;
      font-family: "Russo One", sans-serif;
    }

    .main-nav ul {
      display: grid;

      gap: 30px;

      grid-template-columns: repeat(5, 1fr);
      list-style-type: none;
      padding: 0;
    }

    .main-nav a {
      display: block;
      text-decoration: none;
      text-align: center;
      background-color: black;
      color: white;
      font-size: 1.2rem;
      padding: 0.5rem;
      box-shadow: var(--shadow);
      text-transform: uppercase;
    }

    .main-nav a:hover {
      background-color: white;
      color: black;
    }

    .div-info {
      border: 4px solid black;
      border-radius: 20px;
      padding: 1rem;
      margin-top: 2rem;
      margin-left: auto;
      margin-right: auto;
      text-align: center;
      max-width: 1060px;
      padding-top: 2rem;
      margin-top: 7rem;
    }

    .div-title {
      font-size: 1.8rem;
      margin-bottom: 1rem;
    }

    .container-1 {
      margin-left: auto;
      margin-right: auto;
      padding: 1rem;
      text-align: center;
      max-width: 1060px;
    }
    footer {
      text-align: center;
      margin-top: 5rem;
    }
  </style>
  <body>
    <%- include('./partials/banner.ejs') %>
    <div class="div-info">
      <div class="container-1">
        <% if (aAuthor.length > 0) var author = aAuthor[0];{ %>
        <p class="div-title">
          <%= author.first_name %> <%= author.last_name %>
        </p>
        <p>ID: <%= author.id %> Date of Birth: <%= author.dob %></p>
        <br />

        <% } %>
      </div>
    </div>
  </body>
  <%- include('./partials/footer.ejs') %>
</html>
